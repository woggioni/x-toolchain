pkgbase=gnutls
pkgname=${_target}-gnutls
pkgver=3.8.7
pkgrel=1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
arch=('x86_64')
license=('GPL3' 'LGPL2.1')
url="https://www.gnutls.org/"
options=(!buildflags staticlibs)
depends=("${_target}-gcc" 
    "${_target}-gmp" 
    "${_target}-libtasn1" 
    "${_target}-readline" 
    "${_target}-zlib" 
    "${_target}-nettle"
    "${_target}-libidn2" 
    "${_target}-zstd" 
    "${_target}-libunistring" 
    "${_target}-brotli")
backup=(etc/gnutls/config
        etc/modules-load.d/gnutls.conf)
source=(https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/${pkgbase}-${pkgver}.tar.xz{,.sig})
sha256sums=(
    'fe302f2b6ad5a564bcb3678eb61616413ed5277aaf8e7bf7cdb9a95a18d9f477'
    'SKIP'
)
validpgpkeys=('462225C3B46F34879FC8496CD605848ED7E69871') # "Zoltan Fridrich <zfridric@redhat.com>"

build() {
  cd ${pkgbase}-${pkgver}
  ${_target}-configure \
  --enable-static \
  --enable-shared \
  --disable-tools \
  --disable-doc \
  --disable-nls \
  --disable-srp-authentication \
	--with-idn \
	--with-brotli \
	--with-zstd \
	--enable-openssl-compatibility \
  --disable-rpath \
  --disable-gtk-doc \
  --disable-full-test-suite \
  --without-p11-kit \
	--disable-ktls \
  --without-tpm \
  --enable-year2038 \
  --without-tpm2 \
  --with-default-trust-store-file=/etc/ssl/certs/ca-certificates.crt \
  --enable-cxx .
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}

package() {
  cd ${pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install

  #rm -r "${pkgdir}/${_prefix}/${_target}/sysroot/usr/"{bin,share}
}

strip() {
    ${_target}-strip $@
}
export -f strip