prepare() {
    cd ${pkgbase}-${pkgver}
    autoreconf -vfi
}

build() {
    cd ${pkgbase}-${pkgver}
    local options=(
        --disable-tests
        --enable-nc
    )
    ${_target}-configure ${options[@]} .
    sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
    make
}

package() {
    cd ${pkgbase}-${pkgver}
    make DESTDIR="${pkgdir}" install
    rm -r "${pkgdir}/${_prefix}/${_target}/sysroot/usr/share"
}



strip() {
    ${_target}-strip $@
}
export -f strip
